@model Employee

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link rel="stylesheet" href="https://kendo.cdn.telerik.com/2020.2.617/styles/kendo.common.min.css" />
    <link rel="stylesheet" href="https://kendo.cdn.telerik.com/2020.2.617/styles/kendo.blueopal.min.css" />

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://kendo.cdn.telerik.com/2020.2.617/js/kendo.all.min.js"></script>
</head>

<div class="container shadow p-5">
    <h2>Edit Employee</h2>

    <form method="post" asp-action="Edit">
        <div asp-validation-summary="All"></div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Name">Employee Name</label>
                    <input kendo-textbox asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Designation">Designation</label>
                    <input kendo-textbox asp-for="Designation" class="form-control" />
                    <span asp-validation-for="Designation" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Address">Address</label>
                    <input kendo-textbox asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RecordCreatedOn">Created On</label>
                    <input kendo-datetimepicker asp-for="RecordCreatedOn" class="form-control" />
                    <span asp-validation-for="RecordCreatedOn" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary"><i class="bi bi-file-plus-fill"></i>Update</button>
            <a asp-controller="Employee" asp-action="Index" class="btn btn-warning">Back To List</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        $(function () {
            $("input[kendo-textbox]").kendoTextBox();
            $("input[kendo-datetimepicker]").kendoDateTimePicker();
        });
    </script>
}
