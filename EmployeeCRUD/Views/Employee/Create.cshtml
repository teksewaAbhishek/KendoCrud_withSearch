@model Employee

@{
    ViewData["Title"] = "Add Employee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container shadow p-5">
    <div class="row pb-3">
        <h2>Add Employee</h2>
    </div>

    <form method="post">
        <div asp-validation-summary="All"></div>

        <div class="row mb-3">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Name">Employee Name</label>
                    <input kendo-textbox asp-for="Name" class="form-control" placeholder="Enter Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Designation">Designation</label>
                    <input kendo-textbox asp-for="Designation" class="form-control" placeholder="Enter Designation" />
                    <span asp-validation-for="Designation" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Address">Address</label>
                    <input kendo-textbox asp-for="Address" class="form-control" placeholder="Enter Address" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="RecordCreatedOn">Created On</label>
                    <input kendo-datetimepicker asp-for="RecordCreatedOn" class="form-control" />
                    <span asp-validation-for="RecordCreatedOn" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-md-6">
                <button type="submit" class="btn btn-lg btn-primary btn-block"><i class="bi bi-file-plus-fill"></i>Save</button>
                <a asp-controller="Employee" asp-action="Index" class="btn btn-lg btn-warning btn-block mt-3">Back To List</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        $(function () {
            $("input[kendo-textbox]").kendoTextBox();
            $("input[kendo-datetimepicker]").kendoDateTimePicker();
        });
    </script>
}
